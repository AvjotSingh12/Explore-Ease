<resources>

   <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <!-- Customize tab background -->
        <item name="tabBackground">@drawable/custom_tab_background</item>

        <!-- Customize tab text appearance -->
        <item name="tabTextAppearance">@style/CustomTabText</item>
       <item name="tabPaddingStart">8dp</item>
       <item name="tabPaddingEnd">8dp</item>
       <item name="tabPaddingTop">8dp</item>
       <item name="tabPaddingBottom">8dp</item>
    </style>

    <!-- Custom tab text style -->
    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <!-- Customize text color -->
        <item name="android:textColor">@color/custom_tab_text_color</item>

        <!-- Customize text size -->
        <item name="android:textSize">14sp</item>
    </style>


        <style name="HotelNameStyle">
            <item name="android:textSize">20sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textColor">@color/hotel_name_text</item>

        </style>

        <style name="HotelLocationStyle">
            <item name="android:textSize">16sp</item>
            <item name="android:textColor">@color/hotel_location_text</item>
        </style>

        <color name="background_color">#f5f5f5</color>
        <color name="hotel_name_text">#333333</color>
        <color name="hotel_location_text">#777777</color>




</resources>

